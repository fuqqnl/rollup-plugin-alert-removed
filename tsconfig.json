{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "es6"
        ],
        "module": "esNext",
        "moduleResolution": "Node",
        "noEmit": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017"
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "test/types"
    ]
}